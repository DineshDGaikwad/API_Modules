@model CodeFirstEmptyController.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<h2>Book Details</h2>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Book ID</dt>
            <dd class="col-sm-9">@Model.BookId</dd>

            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price</dd>

            <dt class="col-sm-3">Publication Year</dt>
            <dd class="col-sm-9">@Model.PublicationYear.ToShortDateString()</dd>

            <dt class="col-sm-3">Author</dt>
            <dd class="col-sm-9">@Model.author?.AuthName</dd>
        </dl>

        <a asp-controller="Books" asp-action="Index" class="btn btn-secondary">
            Back to List
        </a>
    </div>
</div>
