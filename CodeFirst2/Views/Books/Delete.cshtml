@model CodeFirstEmptyController.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<h4>Are you sure you want to delete this Book?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Book ID</dt>
        <dd class="col-sm-10">@Model.BookId</dd>

        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Publication Year</dt>
        <dd class="col-sm-10">@Model.PublicationYear</dd>

        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.author?.AuthName</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="BookId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
