@model IEnumerable<CodeFirstEmptyController.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<h2>Books List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Book</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Book ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Author</th>
            <th>Publication Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.BookId</td>
            <td>@item.Title</td>
            <td>@item.Price</td>
            <td>@item.author?.AuthName</td> 
            <td>@item.PublicationYear</td>
            <td>
                <a asp-controller="Books" asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-warning btn-sm">Edit</a> |
                <a asp-controller="Books" asp-action="Details" asp-route-id="@item.BookId" class="btn btn-info btn-sm"> 
                    Details
                </a> |
                <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
