@model CodeFirstEmptyController.Models.Author

@{
    ViewData["Title"] = "Delete Author";
}

<h2>Delete Author</h2>

<h4>Are you sure you want to delete this Author?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Author ID</dt>
        <dd class="col-sm-10">@Model.AuthId</dd>

        <dt class="col-sm-2">Author Name</dt>
        <dd class="col-sm-10">@Model.AuthName</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="AuthId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
