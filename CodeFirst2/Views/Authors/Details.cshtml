@model CodeFirstEmptyController.Models.Author

@{
    ViewData["Title"] = "Author Details";
}

<h2>Author Details</h2>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.AuthId</dd>

            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.AuthName</dd>
        </dl>

            <a asp-controller="Authors" asp-action="Index" class="btn btn-secondary">
                Back to List
            </a>
        </div>
    </div>

