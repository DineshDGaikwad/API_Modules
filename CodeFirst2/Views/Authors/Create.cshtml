@model CodeFirstEmptyController.Models.Author

@{
    ViewData["Title"] = "Create Author";
}

<h2>Create Author</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="AuthName" class="form-label"></label>
        <input asp-for="AuthName" class="form-control" />
        <span asp-validation-for="AuthName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
