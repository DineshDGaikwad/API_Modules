@model CodeFirstEmptyController.Models.Author

@{
    ViewData["Title"] = "Edit Author";
}

<h2>Edit Author</h2>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <input type="hidden" asp-for="AuthId" />

    <div class="mb-3">
        <label asp-for="AuthName" class="form-label"></label>
        <input asp-for="AuthName" class="form-control" />
        <span asp-validation-for="AuthName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>