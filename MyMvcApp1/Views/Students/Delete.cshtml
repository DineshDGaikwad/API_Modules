@{
    ViewData["Title"] = "Delete Records";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<!-- ================= STUDENT ================= -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-danger text-white">
        Delete Student
    </div>
    <div class="card-body">
        <p>Are you sure you want to delete this student?</p>
        <p><strong>@Model.StudName</strong> (ID: @Model.StudId)</p>
        <p>Department: @Model.Dept?.DeptName</p>

        <form asp-action="Delete" asp-controller="Students" method="post">
            <input type="hidden" name="id" value="@Model.StudId" />
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
            <a asp-action="Index" asp-controller="Students" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancel</a>
        </form>
    </div>
</div>

