@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Edit Records";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<!-- ================= STUDENT ================= -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        Edit Student
    </div>
    <div class="card-body">
        <form asp-action="Edit" asp-controller="Students" method="post">
            <input type="hidden" name="StudId" value="@Model?.StudId" />

            <div class="mb-3">
                <label class="form-label">Student Name</label>
                <input name="StudName" class="form-control" placeholder="Enter student name" value="@Model?.StudName" />
            </div>

            <div class="mb-3">
                <label class="form-label">Department</label>
                <select name="DeptId" class="form-select"
                        asp-items="@(new SelectList(ViewBag.Departments, "DeptId", "DeptName", Model?.DeptId))">
                    <option value="">-- Select Department --</option>
                </select>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Save</button>
                <a asp-action="Index" asp-controller="Students" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>

