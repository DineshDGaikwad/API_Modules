@page
@model StudentsModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Student Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background: #f4f6f9;
        }

        .navbar {
            background: #2c3e50;
            padding: 12px 20px;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .navbar a {
            color: white;
            margin-left: 15px;
            text-decoration: none;
            font-weight: bold;
        }
        .navbar a:hover {
            text-decoration: underline;
        }

        h2 {
            color: #2c3e50;
        }
        .container {
            padding: 20px;
        }

        .message {
            padding: 8px;
            margin-bottom: 10px;
            border-radius: 5px;
        }
        .success { background: #d4edda; color: #155724; }
        .error { background: #f8d7da; color: #721c24; }

        .search-box {
            margin-bottom: 15px;
        }
        input[type="text"], input[type="number"] {
            padding: 6px;
            margin: 5px 0;
            width: 250px;
            border-radius: 4px;
            border: 1px solid #ccc;
        }
        button, .btn-link {
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
        }
        button {
            background: #3498db;
            color: white;
        }
        button:hover { background: #2980b9; }
        .btn-link {
            background: #95a5a6;
            color: white;
        }
        .btn-link:hover { background: #7f8c8d; }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 12px;
            background: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }
        th {
            background: #3498db;
            color: white;
        }
        tr:hover { background: #f1f1f1; }
        .actions button {
            margin-right: 5px;
            background: #2ecc71;
        }
        .actions button.delete {
            background: #e74c3c;
        }
    </style>
    <script>
        function confirmDelete() {
            return confirm('Delete this student?');
        }
    </script>
</head>
<body>
    <div class="navbar">
        <div><strong>College Portal</strong></div>
        <div>
            <a href="/Students">Students</a>
            <a href="/Department">Departments</a>
            <a href="/Teacher">Teachers</a>
            <a href="/Signin">Logout</a>
        </div>
    </div>

    <div class="container">
        <h2>Student Management</h2>

        <p>Total Students: <b>@Model.StudentCount</b></p>

        @if (!string.IsNullOrWhiteSpace(Model.Message))
        {
            <div class="message success">@Model.Message</div>
        }
        @if (!string.IsNullOrWhiteSpace(Model.Error))
        {
            <div class="message error">@Model.Error</div>
        }

        <form method="get" class="search-box">
            <input type="text" name="SearchTerm" value="@Model.SearchTerm" placeholder="Search by Name or Department..." />
            <button type="submit">Search</button>
            <a href="/Students" class="btn-link">Clear</a>
        </form>

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Dept Id</th>
                    <th>Dept Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Students != null && Model.Students.Any())
            {
                foreach (var s in Model.Students)
                {
                    <tr>
                        <td>@s.Id</td>
                        <td>@s.Name</td>
                        <td>@s.DeptId</td>
                        <td>@s.DeptName</td>
                        <td class="actions">
                            <form method="post" asp-page-handler="Edit" style="display:inline">
                                <input type="hidden" name="id" value="@s.Id" />
                                <button type="submit">Edit</button>
                            </form>
                            <form method="post" asp-page-handler="Delete" style="display:inline" onsubmit="return confirmDelete();">
                                <input type="hidden" name="id" value="@s.Id" />
                                <button type="submit" class="delete">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="5">No students found.</td></tr>
            }
            </tbody>
        </table>

        <hr />

        <h2>@(Model.EditMode ? "Edit Student" : "Add Student")</h2>

        <form method="post" asp-page-handler="Save">
            <input type="hidden" name="EditMode" value="@(Model.EditMode ? "true" : "false")" />

            <label>Student Id:</label><br />
            <input type="number" name="Id" value="@(Model.Id == 0 ? "" : Model.Id.ToString())"
                   @(Model.EditMode ? "readonly" : "") required /><br /><br />

            <label>Name:</label><br />
            <input type="text" name="Name" value="@Model.Name" required /><br /><br />

            <label>Department Id:</label><br />
            <input type="number" name="Dept" value="@(Model.Dept?.ToString() ?? "")" /><br /><br />

            <button type="submit">@(Model.EditMode ? "Update" : "Add")</button>
            @if (Model.EditMode)
            {
                <a href="/Students" class="btn-link" style="margin-left:8px;">Cancel</a>
            }
        </form>
    </div>

</body>
</html>
