@page
@model YourApp.Pages.SigninModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow-lg p-4 rounded-3">
        <h2 class="text-center mb-4">ðŸ”‘ Sign In</h2>

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" asp-for="Username" class="form-control" placeholder="Enter your username" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Enter your password" required />
            </div>

            <button type="submit" class="btn btn-success w-100">Sign In</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-danger text-center mt-3">
                @Model.Message
            </div>
        }

        <div class="text-center mt-3">
            <p>Don't have an account? <a asp-page="/Signup">Sign Up here</a></p>
        </div>
    </div>
</div>
